<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CardSliderViewPager">

        <attr name="cardSlider_pageMargin" format="dimension"/>
        <attr name="cardSlider_otherPagesWidth" format="dimension"/>

        <attr name="cardSlider_smallScaleFactor" format="float"/>
        <attr name="cardSlider_smallAlphaFactor" format="float" />

        <attr name="cardSlider_minShadow" format="dimension"/>
        <attr name="cardSlider_baseShadow" format="dimension"/>

        <attr name="cardSlider_cardBackgroundColor" format="color"/>
        <attr name="cardSlider_cardCornerRadius" format="dimension"/>

        <attr name="cardSlider_indicator" format="reference"/>

    </declare-styleable>

    <declare-styleable name="CardSliderIndicator">

        <attr name="defaultIndicator" format="reference" />
        <attr name="selectedIndicator" format="reference" />
        <attr name="indicatorMargin" format="dimension" />
        <attr name="indicatorsToShow" format="integer" />

    </declare-styleable>

</resources>